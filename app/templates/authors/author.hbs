<div class="container1">
  <strong>{{model.fullName}}</strong><br>
  <img src="{{model.profilePicture}}" alt="ProfilePicture" width="200" height="200"><br>
  <span><strong>First Name: </strong> {{model.firstName}}</span><br>
  <span><strong>Last Name: </strong>{{model.lastName}}</span><br>
  <span><strong>Email: </strong>{{model.lastName}}</span><br>
  <span><strong>Posts: </strong></span>

</div>
<div class="container2">
  {{#if hasPosts}}
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Published date</th>
        <th>Content</th>
      </tr>
      {{#each model.posts as |post|}}
        <tr>
          <td>
            <button {{action "deletePost" model.id post.id}}>Delete Post</button>
          </td>
          <td>{{post.title}}</td>
          <td>{{post.publishedAt}}</td>
          <td>{{post.content}}</td>
        </tr>
      {{/each}}
    </table>
  {{else}}
    <div class="alert">
      This author don't have posts
    </div>
  {{/if}}
</div>
{{outlet}}